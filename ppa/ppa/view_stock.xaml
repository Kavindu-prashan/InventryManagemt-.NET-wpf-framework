            </ListView.View>
        </ListView>
        <Label Content="View Stock details" HorizontalAlignment="Left" Margin="605,30,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="24" Foreground="White">
            <Label.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="10"/>
